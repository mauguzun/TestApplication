@{
    ViewData["Title"] = "Home Page";
}

@model HappyDates

<div class="text-center">
   

    <form method="post">
        <input type="date" name="date"  class="form-control"  />
        <input type="submit" value="Aprēķināt" />
    </form>
    
</div>


@if(Model != null )
{
    <h1>@Model.LeapYear</h1>

    <table class="table-bordered">
        <tbody>
        @foreach (var item in Model.Dates)
        {
            <tr>
                <td>@item</td>
            </tr>
        }
        </tbody>
    </table>
}
